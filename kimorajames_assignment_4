student_name = "Kimora James" 
current_gpa = 3.2
study_hours = 10 
social_points = 20
stress_levels = 85
#test case number 2 

print(f"Welcome {student_name}!")
print(f"GPA: {current_gpa}, Study Hours: {study_hours}, Social Points: {social_points}, Stress Level: {stress_levels}")
print("Choose your course load:")
print("A) Light (12 credits)")
print("B) Standard (15 credits)")
print("C) Heavy (18 credits)")

choice = input("Your choice: ")

if choice == "A":
    stress_level -= 10
    study_hours -= 5
elif choice == "B":
    stress_level += 5
elif choice == "C":
    if current_gpa >= 3.5:
        stress_level += 15
        study_hours += 10
    else:
        stress_level += 25
        study_hours += 15
else:
    print("Invalid choice!")
#test case number 3
study_options = ["Programming", "Math", "English", "History"]

print("Choose a subject to focus on:")
print("Options:", ", ".join(study_options)) #AI helped me with this part

subject = input("Your choice: ").title()

if subject not in study_options:
    print("Thatâ€™s not a valid subject! You wasted study time.")
    study_hours -= 5
    stress_level += 10
else:
    if subject == "Programming" and study_hours > 20:
        current_gpa += 0.2
        print("Your coding skills improved! GPA increased.")
    elif subject == "Math" or subject == "History":
        current_gpa += 0.1
        social_points -= 5
        print("Studying hard! GPA increased, but less social time.")
    elif subject == "English" and not stress_level > 80:
        current_gpa += 0.15
        print("Relaxed reading helped you focus. GPA increased.")

